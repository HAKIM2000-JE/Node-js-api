<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css">
  

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js">
    <title>Document</title>
</head>
<body>


    <div class="container">
         <h1 class="mb-4" >Films </h1>
         




         <% films.forEach(film=>{%>
              <div class="card mt-4">

                <div class="card-body">
                    <h4 class="card-title"> <%= film.title %></h4>

                    <h6 class="card-title" ><%= film.overview %></h6>

                   
                    <div class="card-text mb-2" >

                         <img src=<%= film.poster_path %>     alt=""/>
                    </div>

                    <a href="films/<%= film.id %>" class="btn btn-primary">Read More</a>

                    <form action="films/<%= film.id %>?_method=DELETE" method="POST" class="d-inline">
                           
                        <button type="submit" class="btn btn-danger" >Delete</button>
                    </form>

                    
                  

                </div>
                  
              </div>


        <%}) %>
    </div>


    <style>

        img{
            width: 250px;
            object-fit: contain;
        }
    </style>
    
</body>
</html>